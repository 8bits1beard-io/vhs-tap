# Server Configuration
PORT=3000
NODE_ENV=development

# Jellyfin Configuration
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# OMDB API (for movie metadata)
# Get a free API key at: http://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=your_omdb_api_key_here

# Database
DB_PATH=./vhs_nfc.db

# Admin Authentication (optional - for securing admin endpoints)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Automatic Playback Configuration
# Set to 'true' to enable automatic playback when scanning NFC tags
AUTO_PLAYBACK_ENABLED=true
# Default Jellyfin user ID for automatic playback (leave empty to use first user)
DEFAULT_USER_ID=
# Set to 'true' to automatically use the first active session found
AUTO_SELECT_SESSION=true
